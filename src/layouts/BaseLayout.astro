---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Salt Life Detail - Marine Detailing Products & Guides",
  description = "Expert marine detailing product reviews, guides, and local services in Southwest Florida."
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Elegant typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <style>
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>
  
  <body class="bg-white flex flex-col min-h-screen antialiased">
    <!-- Elegant Navigation -->
    <header class="bg-white border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-8">
        <div class="flex items-center justify-between h-20">
          
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-4">
              <div class="w-10 h-10 bg-gray-900 flex items-center justify-center">
                <span class="text-white font-medium text-lg">S</span>
              </div>
              <div>
                <h1 class="text-xl font-medium text-gray-900 tracking-tight">Salt Life Detail</h1>
                <p class="text-xs text-gray-500 font-light tracking-wide uppercase">Marine Experts</p>
              </div>
            </a>
          </div>
          
          <!-- Navigation -->
          <nav class="hidden md:flex items-center space-x-12">
            <a href="/reviews" class="text-gray-600 hover:text-gray-900 font-light tracking-wide transition-colors">Reviews</a>
            <a href="/guides" class="text-gray-600 hover:text-gray-900 font-light tracking-wide transition-colors">Guides</a>
            <a href="/local-services" class="text-gray-600 hover:text-gray-900 font-light tracking-wide transition-colors">Local Services</a>
            <a href="/about" class="text-gray-600 hover:text-gray-900 font-light tracking-wide transition-colors">About</a>
            <a href="/contact" class="bg-gray-900 text-white px-6 py-3 font-medium hover:bg-gray-800 transition-colors">Contact</a>
          </nav>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button class="text-gray-600 hover:text-gray-900">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
          </div>
          
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Elegant Footer -->
    <footer class="bg-gray-50 border-t border-gray-100">
      <div class="max-w-7xl mx-auto px-8 py-16">
        
        <!-- Footer content -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
          
          <!-- Brand -->
          <div class="md:col-span-2">
            <div class="flex items-center space-x-4 mb-6">
              <div class="w-10 h-10 bg-gray-900 flex items-center justify-center">
                <span class="text-white font-medium text-lg">S</span>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900">Salt Life Detail</h3>
                <p class="text-sm text-gray-500 font-light">Marine Experts</p>
              </div>
            </div>
            <p class="text-gray-600 leading-relaxed max-w-md font-light">
              Honest marine detailing product reviews and professional guides from Southwest Florida. 
              Every recommendation is tested in real saltwater conditions.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h4 class="font-medium text-gray-900 mb-6">Navigate</h4>
            <ul class="space-y-3 text-sm">
              <li><a href="/reviews" class="text-gray-600 hover:text-gray-900 font-light">Product Reviews</a></li>
              <li><a href="/guides" class="text-gray-600 hover:text-gray-900 font-light">How-To Guides</a></li>
              <li><a href="/local-services" class="text-gray-600 hover:text-gray-900 font-light">Local Services</a></li>
              <li><a href="/about" class="text-gray-600 hover:text-gray-900 font-light">About</a></li>
            </ul>
          </div>
          
          <!-- Contact -->
          <div>
            <h4 class="font-medium text-gray-900 mb-6">Connect</h4>
            <ul class="space-y-3 text-sm">
              <li class="text-gray-600 font-light">Estero, Florida</li>
              <li><a href="mailto:hello@saltlifedetail.com" class="text-gray-600 hover:text-gray-900 font-light">hello@saltlifedetail.com</a></li>
              <li><a href="/contact" class="text-gray-600 hover:text-gray-900 font-light">Contact Form</a></li>
            </ul>
          </div>
          
        </div>
        
        <!-- Bottom -->
        <div class="border-t border-gray-200 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
          <p class="text-sm text-gray-500 font-light">
            Â© 2025 Salt Life Detail. All rights reserved.
          </p>
          <div class="flex space-x-8 mt-4 md:mt-0">
            <a href="/privacy" class="text-sm text-gray-500 hover:text-gray-900 font-light">Privacy</a>
            <a href="/terms" class="text-sm text-gray-500 hover:text-gray-900 font-light">Terms</a>
            <a href="/affiliate-disclosure" class="text-sm text-gray-500 hover:text-gray-900 font-light">Affiliate Disclosure</a>
          </div>
        </div>
        
      </div>
    </footer>
  </body>
</html>