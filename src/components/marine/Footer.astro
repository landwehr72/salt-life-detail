---
// src/components/marine/Footer.astro
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Product Reviews",
    links: [
      { label: "All Reviews", href: "/reviews" },
      { label: "Cleaners & Soaps", href: "/reviews/cleaners" },
      { label: "Waxes & Sealants", href: "/reviews/waxes-sealants" },
      { label: "Tools & Equipment", href: "/reviews/tools-equipment" },
    ],
  },
  {
    title: "Guides & Resources",
    links: [
      { label: "How-To Guides", href: "/guides" },
      { label: "Buying Guides", href: "/buying-guides" },
      { label: "Maintenance Tips", href: "/guides/basic-maintenance" },
      { label: "Seasonal Care", href: "/guides/seasonal-care" },
    ],
  },
  {
    title: "Local Services",
    links: [
      { label: "SW Florida Services", href: "/local-services" },
      { label: "Recommended Marinas", href: "/local-services/marinas" },
      { label: "Supply Stores", href: "/local-services/supply-stores" },
    ],
  },
  {
    title: "Company",
    links: [
      { label: "About Us", href: "/about" },
      { label: "Contact", href: "/contact" },
      { label: "Affiliate Disclosure", href: "/affiliate-disclosure" },
      { label: "Privacy Policy", href: "/privacy-policy" },
    ],
  },
];
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-8 py-12">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Brand section -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-3 mb-4">
          <div class="size-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <svg class="size-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-white">Salt Life Detail</h3>
            <p class="text-sm text-gray-400">Marine Experts</p>
          </div>
        </div>
        <p class="text-gray-400 text-sm mb-4">
          Your trusted source for marine detailing product reviews and guides in Southwest Florida.
        </p>
        <div class="flex space-x-4">
          <a href="https://facebook.com/saltlifedetail" class="text-gray-400 hover:text-blue-400 transition-colors" aria-label="Facebook">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://instagram.com/saltlifedetail" class="text-gray-400 hover:text-blue-400 transition-colors" aria-label="Instagram">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987c6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297L3.381 17.436c.875.875 2.077 1.416 3.426 1.416 2.687 0 4.861-2.174 4.861-4.861 0-1.349-.541-2.551-1.416-3.426l-1.745 1.745c.807.875 1.297 2.026 1.297 3.323 0 2.687-2.174 4.861-4.861 4.861z"/>
            </svg>
          </a>
          <a href="https://youtube.com/@saltlifedetail" class="text-gray-400 hover:text-blue-400 transition-colors" aria-label="YouTube">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer links -->
      {footerLinks.map((section) => (
        <div>
          <h4 class="text-white font-semibold mb-4">{section.title}</h4>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Newsletter signup -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="mb-4 md:mb-0">
          <h4 class="text-white font-semibold mb-2">Stay Updated</h4>
          <p class="text-gray-400 text-sm">Get the latest marine detailing tips and product reviews.</p>
        </div>
        <div class="flex">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="px-4 py-2 bg-gray-800 text-white rounded-l-lg border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
          />
          <button class="px-4 py-2 bg-blue-600 text-white rounded-r-lg hover:bg-blue-700 transition-colors">
            Subscribe
          </button>
        </div>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row items-center justify-between">
      <div class="text-gray-400 text-sm mb-4 md:mb-0">
        <p>¬© {currentYear} Salt Life Detail. All rights reserved.</p>
        <p class="mt-1">
          Serving boat owners in Southwest Florida with honest product reviews and expert advice.
        </p>
      </div>
      <div class="flex items-center space-x-4 text-sm text-gray-400">
        <span>üìç Estero, Florida</span>
        <span>üö§ Marine Experts</span>
      </div>
    </div>

    <!-- Affiliate disclosure -->
    <div class="mt-6 p-4 bg-gray-800 rounded-lg">
      <p class="text-xs text-gray-400">
        <strong>Affiliate Disclosure:</strong> Salt Life Detail may earn commissions from purchases made through our affiliate links. 
        This doesn't affect our honest reviews or recommendations. We only promote products we've personally tested and believe in.
        <a href="/affiliate-disclosure" class="text-blue-400 hover:text-blue-300 ml-1">Learn more</a>
      </p>
    </div>
  </div>
</footer>