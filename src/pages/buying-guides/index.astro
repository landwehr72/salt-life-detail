---
// src/pages/buying-guides/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import BaseHead from "../../layouts/BaseHead.astro";

const buyingGuideCategories = [
  {
    name: "Best Of Lists",
    slug: "best-of",
    description: "Top-rated products in each category",
    count: 15
  },
  {
    name: "Product Comparisons",
    slug: "comparisons", 
    description: "Side-by-side analysis of similar products",
    count: 8
  },
  {
    name: "Budget Guides",
    slug: "budget",
    description: "Quality products at every price point",
    count: 10
  },
  {
    name: "Seasonal Recommendations",
    slug: "seasonal",
    description: "Products for specific weather conditions",
    count: 6
  }
];

const featuredBuyingGuides = [
  {
    title: "Best Marine Soaps 2024",
    category: "Best Of Lists",
    readTime: "12 min read",
    excerpt: "Our top 5 pH-neutral boat soaps that won't strip ceramic coatings, tested over 6 months in Southwest Florida conditions.",
    slug: "best-marine-soaps-2024",
    featured: true,
    products: 5,
    lastUpdated: "December 2024"
  },
  {
    title: "Meguiar's vs Chemical Guys Marine Wax", 
    category: "Product Comparisons",
    readTime: "8 min read",
    excerpt: "Head-to-head comparison of two popular marine wax brands, including durability testing in harsh UV conditions.",
    slug: "meguiars-vs-chemical-guys-wax",
    featured: true,
    products: 2,
    lastUpdated: "November 2024"
  },
  {
    title: "Complete Boat Detailing Kit Under $200",
    category: "Budget Guides", 
    readTime: "15 min read",
    excerpt: "Everything you need to detail your boat professionally without breaking the bank. Tested and proven product combinations.",
    slug: "boat-detailing-kit-under-200",
    featured: true,
    products: 8,
    lastUpdated: "October 2024"
  },
  {
    title: "Hurricane Season Protection Products",
    category: "Seasonal Recommendations",
    readTime: "10 min read", 
    excerpt: "Essential products for protecting your boat during Florida's hurricane season, from covers to corrosion preventatives.",
    slug: "hurricane-season-protection",
    featured: false,
    products: 6,
    lastUpdated: "September 2024"
  }
];
---

<BaseLayout>
  <BaseHead 
    title="Marine Detailing Buying Guides | Salt Life Detail"
    description="Expert buying guides for marine detailing products. Compare the best boat cleaning products, waxes, and tools with real-world testing from Southwest Florida."
    keywords="marine detailing buying guide, best boat soap, marine wax comparison, boat cleaning products, marine detailing products"
    slot="head"
  />
  
  <!-- Header Section -->
    <section class="bg-white py-16 border-b border-gray-100">
      <div class="max-w-6xl mx-auto px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-light text-gray-900 mb-6 tracking-tight">
            Buying Guides
          </h1>
          <p class="text-xl text-gray-600 font-light leading-relaxed">
            Data-driven product recommendations based on extensive testing in Southwest Florida's marine environment. Find the best products for your boat and budget.
          </p>
        </div>
      </div>
    </section>

    <!-- Value Proposition -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-4xl mx-auto px-8 text-center">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="w-12 h-12 bg-gray-600 mx-auto mb-4 flex items-center justify-center">
              <span class="text-white font-bold">1</span>
            </div>
            <h3 class="font-medium text-gray-900 mb-2">Real Testing</h3>
            <p class="text-sm text-gray-600 font-light">
              Every recommendation is based on months of real-world testing
            </p>
          </div>
          <div>
            <div class="w-12 h-12 bg-gray-600 mx-auto mb-4 flex items-center justify-center">
              <span class="text-white font-bold">2</span>
            </div>
            <h3 class="font-medium text-gray-900 mb-2">Value Focused</h3>
            <p class="text-sm text-gray-600 font-light">
              Find quality products at every price point, from budget to premium
            </p>
          </div>
          <div>
            <div class="w-12 h-12 bg-gray-600 mx-auto mb-4 flex items-center justify-center">
              <span class="text-white font-bold">3</span>
            </div>
            <h3 class="font-medium text-gray-900 mb-2">Data Driven</h3>
            <p class="text-sm text-gray-600 font-light">
              Objective comparisons with performance metrics and durability data
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-8">
        <h2 class="text-3xl font-light text-gray-900 mb-12 text-center">Browse by Category</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {buyingGuideCategories.map((category) => (
            <a 
              href={`/buying-guides/${category.slug}`}
              class="bg-white border border-gray-200 p-8 hover:border-gray-300 transition-all duration-300 group text-center hover:shadow-lg"
            >
              <div class="w-1 h-12 bg-gray-900 mb-6 mx-auto"></div>
              <h3 class="text-lg font-medium text-gray-900 mb-3 group-hover:text-gray-700">
                {category.name}
              </h3>
              <p class="text-sm text-gray-600 leading-relaxed mb-4 font-light">
                {category.description}
              </p>
              <div class="flex justify-between items-center">
                <span class="text-xs text-gray-500 font-light">
                  {category.count} guides
                </span>
                <span class="text-gray-400 group-hover:text-gray-600 transition-colors">→</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Buying Guides -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-8">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-light text-gray-900">Latest Buying Guides</h2>
          <a href="/buying-guides/all" class="text-gray-600 hover:text-gray-900 font-light">
            View All →
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {featuredBuyingGuides.map((guide) => (
            <article class="bg-white border border-gray-200 hover:border-gray-300 transition-all duration-300 group hover:shadow-lg">
              <div class="aspect-[16/9] bg-gradient-to-br from-gray-50 to-gray-100 border-b border-gray-200 flex items-center justify-center">
                <div class="text-center">
                  <div class="w-16 h-16 bg-white border border-gray-200 mx-auto mb-2 flex items-center justify-center">
                    <span class="text-2xl font-bold text-gray-600">{guide.products}</span>
                  </div>
                  <span class="text-xs text-gray-600 font-medium">Products Reviewed</span>
                </div>
              </div>
              <div class="p-8">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <span class="text-xs text-gray-500 uppercase tracking-wide font-light mb-2 block">
                      {guide.category}
                    </span>
                    <h3 class="text-xl font-medium text-gray-900 mb-2 group-hover:text-gray-700">
                      {guide.title}
                    </h3>
                  </div>
                  <div class="text-right">
                    <div class="text-xs text-gray-500 font-light">{guide.readTime}</div>
                    <div class="text-xs text-gray-500 font-light">Updated {guide.lastUpdated}</div>
                  </div>
                </div>
                
                <p class="text-gray-600 text-sm leading-relaxed mb-6 font-light">
                  {guide.excerpt}
                </p>
                
                <div class="flex justify-between items-center">
                  <div class="flex items-center space-x-4">
                    <span class="text-xs text-gray-600 bg-gray-50 px-2 py-1 font-medium">
                      {guide.products} Products
                    </span>
                    <span class="text-xs text-gray-500 font-light">
                      {guide.readTime}
                    </span>
                  </div>
                  <a 
                    href={`/buying-guides/${guide.slug}`}
                    class="text-sm text-gray-900 hover:text-gray-600 font-medium"
                  >
                    Read Guide →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="py-16 bg-gray-900">
      <div class="max-w-4xl mx-auto px-8 text-center">
        <h2 class="text-3xl font-light text-white mb-6">Stay Updated</h2>
        <p class="text-lg text-gray-300 mb-8 font-light">
          Get notified when we publish new buying guides and product comparisons.
        </p>
        <div class="max-w-md mx-auto">
          <div class="flex border border-gray-700">
            <input 
              type="email" 
              placeholder="Your email address" 
              class="flex-1 px-4 py-3 bg-gray-800 text-white border-none focus:outline-none font-light placeholder-gray-400"
            >
            <button class="bg-gray-900 text-white px-6 py-3 font-medium hover:bg-gray-700 transition-colors">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </section>
</BaseLayout>