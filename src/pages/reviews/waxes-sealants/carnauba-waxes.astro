---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ComingSoon from '../../../components/marine/ComingSoon.astro';
import BaseHead from '../../../layouts/BaseHead.astro';

const pageTitle = 'Marine Carnauba Waxes Reviews';
const pageDescription = 'Coming soon: Reviews of premium carnauba waxes designed for marine applications.';
---

<BaseLayout>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    slot="head"
  />
  
  <ComingSoon
    title="Marine Carnauba Waxes"
    description="We're testing the finest carnauba waxes that provide exceptional gloss and protection for marine gelcoat and paint."
    category="reviews"
    estimatedDate="Coming in Q3 2025"
    relatedPages={[
      {
        title: 'Waxes & Sealants Overview',
        href: '/reviews/waxes-sealants',
        description: 'Browse our current protection product reviews'
      },
      {
        title: 'Polymer Sealants',
        href: '/reviews/waxes-sealants/polymer-sealants',
        description: 'Compare synthetic protection options'
      }
    ]}
  />
</BaseLayout>