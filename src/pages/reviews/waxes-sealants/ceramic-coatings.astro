---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ComingSoon from '../../../components/marine/ComingSoon.astro';
import BaseHead from '../../../layouts/BaseHead.astro';

const pageTitle = 'Marine Ceramic Coatings Reviews';
const pageDescription = 'Coming soon: In-depth reviews of the best ceramic coatings for boats and marine vessels.';
---

<BaseLayout>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    slot="head"
  />
  
  <ComingSoon
    title="Marine Ceramic Coatings"
    description="We're testing the latest ceramic coating technology for marine use, focusing on durability, UV protection, and salt water resistance."
    category="reviews"
    estimatedDate="Coming in Q3 2025"
    relatedPages={[
      {
        title: 'Waxes & Sealants Overview',
        href: '/reviews/waxes-sealants',
        description: 'Browse our current protection product reviews'
      },
      {
        title: 'Ceramic Safe Cleaners',
        href: '/reviews/cleaners/ceramic-safe',
        description: 'Find cleaners that won\'t damage ceramic coatings'
      }
    ]}
  />
</BaseLayout>