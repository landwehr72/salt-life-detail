---
// src/pages/reviews/waxes-sealants/index.astro
import BaseLayout from "@/layouts/BaseLayout.astro";

const categoryData = {
  title: "Marine Waxes & Sealants Reviews",
  description: "Expert reviews of marine waxes, sealants, and ceramic coatings tested in Florida's harsh UV and saltwater conditions. Find the best protection for your boat.",
  category: "Waxes & Sealants",
  totalProducts: 18
};

const featuredProducts = [
  {
    name: "Starke Repel Pro Ceramic Coating",
    brand: "Starke Surface Technology",
    rating: 4.9,
    price: "$230.00",
    excerpt: "Ultra-concentrated nano-ceramic coating delivering true 9H hardness with multi-year guarantee on marine paint",
    slug: "starke-repel-pro-ceramic-coating",
    category: "Ceramic Coatings"
  },
  {
    name: "Starke Hyper Hold Pro SiO2 Sealant", 
    brand: "Starke Surface Technology",
    rating: 4.8,
    price: "$38.99",
    excerpt: "Professional-grade polymer sealant with SiO2 technology for extended durability",
    slug: "starke-hyper-hold-pro-sealant",
    category: "Polymer Sealants"
  },
  {
    name: "Meguiar's Marine Wax",
    brand: "Meguiar's",
    rating: 4.6,
    price: "$19.99",
    excerpt: "Premium carnauba blend specifically formulated for marine gelcoat and fiberglass",
    slug: "meguiars-marine-wax",
    category: "Carnauba Waxes"
  },
  {
    name: "Collinite 885 Heavy Duty Paste Wax",
    brand: "Collinite",
    rating: 4.7,
    price: "$24.99", 
    excerpt: "Long-lasting durability wax that withstands extreme marine conditions",
    slug: "collinite-885-paste-wax",
    category: "Paste Waxes"
  }
];

const subcategories = [
  {
    name: "Ceramic Coatings",
    description: "Professional-grade nano coatings for maximum protection",
    count: 5,
    slug: "ceramic-coatings",
    durability: "2-5 years"
  },
  {
    name: "Polymer Sealants",
    description: "Synthetic sealants offering excellent durability",
    count: 6,
    slug: "polymer-sealants", 
    durability: "6-12 months"
  },
  {
    name: "Carnauba Waxes",
    description: "Natural waxes providing deep gloss and warmth",
    count: 4,
    slug: "carnauba-waxes",
    durability: "2-4 months"
  },
  {
    name: "Spray Sealants",
    description: "Easy-apply sealants for quick protection",
    count: 3,
    slug: "spray-sealants",
    durability: "3-6 months"
  }
];
---

<BaseLayout 
  title={categoryData.title}
  description={categoryData.description}
  keywords="marine wax reviews, boat sealant reviews, ceramic coating reviews, marine protection products"
>
  <section class="bg-white py-16">
    <div class="max-w-6xl mx-auto px-8">
      <div class="text-center max-w-4xl mx-auto mb-12">
        <div class="inline-flex items-center bg-gray-100 text-gray-800 px-4 py-2 text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-gray-600 rounded-full mr-2"></span>
          Product Reviews
        </div>
        
        <h1 class="text-5xl font-light text-gray-900 mb-6 tracking-tight">
          {categoryData.category} Reviews
        </h1>
        
        <p class="text-xl text-gray-600 font-light leading-relaxed">
          {categoryData.description}
        </p>
        
        <div class="flex justify-center items-center space-x-6 mt-8 text-sm text-gray-500">
          <div class="flex items-center">
            <span class="font-medium text-gray-900">{categoryData.totalProducts}</span>
            <span class="ml-1">Products Tested</span>
          </div>
          <div class="w-1 h-1 bg-gray-300 rounded-full"></div>
          <div>Florida UV Testing</div>
          <div class="w-1 h-1 bg-gray-300 rounded-full"></div>
          <div>Saltwater Exposure</div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-gray-50">
    <div class="max-w-6xl mx-auto px-8">
      <h2 class="text-2xl font-light text-gray-900 mb-8 text-center">Protection Types</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {subcategories.map((sub) => (
          <a 
            href={`/reviews/waxes-sealants/${sub.slug}`}
            class="bg-white border border-gray-200 p-6 hover:border-gray-300 hover:shadow-sm transition-all duration-300 group text-center"
          >
            <h3 class="font-medium text-gray-900 mb-2 group-hover:text-gray-700">
              {sub.name}
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed mb-3 font-light">
              {sub.description}
            </p>
            <div class="space-y-2">
              <div class="text-xs text-gray-600 bg-gray-50 px-2 py-1 font-medium">
                Lasts: {sub.durability}
              </div>
              <div class="flex justify-between items-center">
                <span class="text-xs text-gray-500 font-light">
                  {sub.count} products
                </span>
                <span class="text-gray-400 group-hover:text-gray-600 transition-colors">→</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-8">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-light text-gray-900">Top Rated Protection</h2>
        <a href="/reviews/waxes-sealants/all" class="text-gray-600 hover:text-gray-900 font-light">
          View All {categoryData.totalProducts} →
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {featuredProducts.map((product) => (
          <article class="bg-white border border-gray-200 hover:border-gray-300 hover:shadow-lg transition-all duration-300 group">
            <div class="aspect-[16/9] bg-gradient-to-br from-gray-50 to-gray-100 border-b border-gray-200 flex items-center justify-center">
              <div class="text-center">
                <div class="w-16 h-16 bg-white border border-gray-200 mx-auto mb-3 flex items-center justify-center">
                  <span class="text-2xl font-bold">W</span>
                </div>
                <span class="text-xs text-gray-600 font-medium">{product.category}</span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h3 class="text-lg font-medium text-gray-900 mb-1 group-hover:text-gray-700">
                    {product.name}
                  </h3>
                  <p class="text-sm text-gray-500">{product.brand}</p>
                </div>
                <div class="text-right">
                  <div class="text-lg font-medium text-gray-900">{product.price}</div>
                  <div class="flex items-center mt-1">
                    <span class="text-yellow-400 text-sm">★★★★★</span>
                    <span class="ml-1 text-xs text-gray-500">{product.rating}</span>
                  </div>
                </div>
              </div>
              
              <p class="text-gray-600 text-sm leading-relaxed mb-4 font-light">
                {product.excerpt}
              </p>
              
              <div class="flex justify-between items-center">
                <span class="text-xs text-gray-600 bg-gray-50 px-2 py-1 font-medium">
                  {product.category}
                </span>
                <a 
                  href={`/reviews/${product.slug}`}
                  class="text-sm text-gray-900 hover:text-gray-600 font-medium"
                >
                  Read Review →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-8">
      <h2 class="text-3xl font-light text-gray-900 mb-8 text-center">Florida Protection Guide</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-4">UV Protection Priority</h3>
            <p class="text-sm text-gray-800 font-light mb-4">
              Florida's intense UV radiation breaks down gelcoat and fades surfaces faster than anywhere else. Choose protection based on your usage:
            </p>
            <ul class="text-sm text-gray-800 space-y-2">
              <li>• <strong>Daily use:</strong> Ceramic coatings or high-end sealants</li>
              <li>• <strong>Weekend use:</strong> Quality polymer sealants</li>
              <li>• <strong>Occasional use:</strong> Premium carnauba waxes</li>
            </ul>
          </div>
        </div>
        
        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-4">Application Tips</h3>
            <ul class="text-sm text-gray-800 space-y-2">
              <li>• Apply in shade during cooler morning hours</li>
              <li>• Surface temperature should be below 85°F</li>
              <li>• Avoid application before rain (check forecast)</li>
              <li>• Allow full cure time before water exposure</li>
              <li>• Reapply more frequently in summer months</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>