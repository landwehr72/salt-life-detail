---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ComingSoon from '../../../components/marine/ComingSoon.astro';
import BaseHead from '../../../layouts/BaseHead.astro';

const pageTitle = 'Salt Removal Cleaners Reviews';
const pageDescription = 'Coming soon: Expert reviews of the most effective salt removal cleaners for marine use.';
---

<BaseLayout>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    slot="head"
  />
  
  <ComingSoon
    title="Salt Removal Cleaners"
    description="We're testing specialized salt removal products to help you effectively eliminate salt buildup and corrosion."
    category="reviews"
    estimatedDate="Coming in Q3 2025"
    relatedPages={[
      {
        title: 'Marine Cleaners Overview',
        href: '/reviews/cleaners',
        description: 'Browse our current selection of marine cleaner reviews'
      },
      {
        title: 'Basic Maintenance Guide',
        href: '/guides/basic-maintenance',
        description: 'Learn routine maintenance to prevent salt damage'
      }
    ]}
  />
</BaseLayout>