---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ComingSoon from '../../../components/marine/ComingSoon.astro';
import BaseHead from '../../../layouts/BaseHead.astro';

const pageTitle = 'pH Neutral Marine Cleaners Reviews';
const pageDescription = 'Coming soon: Comprehensive reviews of the best pH neutral marine cleaners for safe and effective boat cleaning.';
---

<BaseLayout>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    slot="head"
  />
  
  <ComingSoon
    title="pH Neutral Marine Cleaners"
    description="We're testing the best pH neutral cleaners that are safe for all marine surfaces including gelcoat, vinyl, and metal."
    category="reviews"
    estimatedDate="Coming in Q3 2025"
    relatedPages={[
      {
        title: 'Marine Cleaners Overview',
        href: '/reviews/cleaners',
        description: 'Browse our current selection of marine cleaner reviews'
      },
      {
        title: 'Complete Cleaning Guide',
        href: '/guides/complete-jetski-cleaning-guide',
        description: 'Learn proper cleaning techniques for your marine vessel'
      }
    ]}
  />
</BaseLayout>