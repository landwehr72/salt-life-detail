---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ComingSoon from '../../../components/marine/ComingSoon.astro';
import BaseHead from '../../../layouts/BaseHead.astro';

const pageTitle = 'Marine Polishers & Buffers Reviews';
const pageDescription = 'Coming soon: Reviews of the best polishers and buffers for marine gelcoat restoration.';
---

<BaseLayout>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    slot="head"
  />
  
  <ComingSoon
    title="Marine Polishers & Buffers"
    description="We're testing orbital and rotary polishers specifically for marine gelcoat restoration and maintenance."
    category="reviews"
    estimatedDate="Coming in Q3 2025"
    relatedPages={[
      {
        title: 'Tools & Equipment Overview',
        href: '/reviews/tools-equipment',
        description: 'Browse our current tool and equipment reviews'
      },
      {
        title: 'Deep Cleaning Guides',
        href: '/guides/deep-cleaning',
        description: 'Learn advanced restoration techniques'
      }
    ]}
  />
</BaseLayout>