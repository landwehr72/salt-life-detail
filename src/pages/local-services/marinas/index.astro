---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ComingSoon from '../../../components/marine/ComingSoon.astro';
import BaseHead from '../../../layouts/BaseHead.astro';

const pageTitle = 'Local Marinas Directory';
const pageDescription = 'Coming soon: Directory of marinas offering marine detailing services and facilities.';
---

<BaseLayout>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    slot="head"
  />
  
  <ComingSoon
    title="Local Marinas"
    description="We're building a comprehensive directory of marinas that offer detailing services, wash facilities, and marine maintenance."
    category="local-services"
    estimatedDate="Coming in Q4 2025"
    relatedPages={[
      {
        title: 'Local Services Overview',
        href: '/local-services',
        description: 'Learn about our local services directory'
      },
      {
        title: 'Detailing Services',
        href: '/local-services/detailing-services',
        description: 'Find professional detailing services'
      }
    ]}
  />
</BaseLayout>