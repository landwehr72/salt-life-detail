---
// src/pages/guides/deep-cleaning/index.astro
import BaseLayout from "@/layouts/BaseLayout.astro";

const categoryData = {
  title: "Deep Cleaning Marine Detailing Guides",
  description: "Comprehensive deep cleaning guides for marine surfaces. Learn professional techniques for gelcoat restoration, oxidation removal, and intensive cleaning.",
  category: "Deep Cleaning",
  totalGuides: 10
};

const featuredGuides = [
  {
    title: "Complete Gelcoat Restoration Process",
    difficulty: "Advanced",
    readTime: "45 min read",
    excerpt: "Professional step-by-step process for restoring heavily oxidized gelcoat to like-new condition using compounds and polishes.",
    slug: "complete-gelcoat-restoration",
    featured: true,
    tasks: ["Compound application", "Progressive polishing", "Protection sealing"]
  },
  {
    title: "Removing Heavy Water Spots and Stains",
    difficulty: "Intermediate", 
    readTime: "25 min read",
    excerpt: "Proven techniques for removing stubborn mineral deposits, rust stains, and heavy water spotting without damaging gelcoat.",
    slug: "removing-heavy-water-spots",
    featured: true,
    tasks: ["Stain identification", "Product selection", "Safe removal techniques"]
  },
  {
    title: "Engine Bay Deep Clean and Detail",
    difficulty: "Intermediate",
    readTime: "35 min read",
    excerpt: "Safe and effective methods for deep cleaning engine compartments, removing salt buildup, and protecting components.",
    slug: "engine-bay-deep-clean",
    featured: true,
    tasks: ["Safety preparation", "Cleaning process", "Corrosion protection"]
  },
  {
    title: "Interior Deep Cleaning and Restoration",
    difficulty: "Intermediate",
    readTime: "30 min read",
    excerpt: "Comprehensive interior cleaning including vinyl repair, stain removal, and UV damage prevention.",
    slug: "interior-deep-cleaning",
    featured: false,
    tasks: ["Vinyl restoration", "Stain treatment", "Protection application"]
  }
];

const cleaningLevels = [
  {
    name: "Surface Restoration",
    description: "Compound and polish for gelcoat revival",
    count: 4,
    slug: "surface-restoration",
    icon: "DC",
    difficulty: "Advanced",
    timeRequired: "4-8 hours"
  },
  {
    name: "Stain Removal",
    description: "Techniques for stubborn marks and discoloration", 
    count: 3,
    slug: "stain-removal",
    icon: "S",
    difficulty: "Intermediate",
    timeRequired: "1-3 hours"
  },
  {
    name: "System Cleaning",
    description: "Engine bays, bilges, and hard-to-reach areas",
    count: 2,
    slug: "system-cleaning",
    icon: "T",
    difficulty: "Intermediate", 
    timeRequired: "2-4 hours"
  },
  {
    name: "Full Restoration",
    description: "Complete boat transformation projects",
    count: 1,
    slug: "full-restoration",
    icon: "FR",
    difficulty: "Expert",
    timeRequired: "Multiple days"
  }
];

const deepCleaningSteps = [
  {
    step: "Assessment",
    description: "Evaluate damage and choose appropriate products",
    duration: "15-30 min"
  },
  {
    step: "Preparation", 
    description: "Mask areas, gather tools, ensure proper conditions",
    duration: "30-45 min"
  },
  {
    step: "Heavy Cleaning",
    description: "Remove contaminants with aggressive methods",
    duration: "1-3 hours"
  },
  {
    step: "Correction",
    description: "Compound and polish to restore surface",
    duration: "2-4 hours"
  },
  {
    step: "Protection",
    description: "Apply wax, sealant, or ceramic coating",
    duration: "1-2 hours"
  }
];
---

<BaseLayout 
  title={categoryData.title}
  description={categoryData.description}
  keywords="deep cleaning boat guide, gelcoat restoration, marine detailing techniques, boat oxidation removal"
>
  <section class="bg-white py-16">
    <div class="max-w-6xl mx-auto px-8">
      <div class="text-center max-w-4xl mx-auto mb-12">
        <div class="inline-flex items-center bg-gray-100 text-gray-800 px-4 py-2 text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-gray-600 rounded-full mr-2"></span>
          How-To Guides
        </div>
        
        <h1 class="text-5xl font-light text-gray-900 mb-6 tracking-tight">
          {categoryData.category} Guides
        </h1>
        
        <p class="text-xl text-gray-600 font-light leading-relaxed">
          {categoryData.description}
        </p>
        
        <div class="flex justify-center items-center space-x-6 mt-8 text-sm text-gray-500">
          <div class="flex items-center">
            <span class="font-medium text-gray-900">{categoryData.totalGuides}</span>
            <span class="ml-1">Professional Guides</span>
          </div>
          <div class="w-1 h-1 bg-gray-300 rounded-full"></div>
          <div>Advanced Techniques</div>
          <div class="w-1 h-1 bg-gray-300 rounded-full"></div>
          <div>Restoration Focus</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Deep Cleaning Process Overview -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-6xl mx-auto px-8">
      <h2 class="text-2xl font-light text-gray-900 mb-8 text-center">Deep Cleaning Process</h2>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        {deepCleaningSteps.map((step, index) => (
          <div class="bg-white border border-gray-200 p-4 text-center">
            <div class="w-8 h-8 bg-gray-600 text-white mx-auto mb-3 flex items-center justify-center font-bold text-sm">
              {index + 1}
            </div>
            <h3 class="font-medium text-gray-900 mb-2">{step.step}</h3>
            <p class="text-xs text-gray-800 mb-2 font-light">{step.description}</p>
            <div class="text-xs text-gray-600 bg-gray-100 px-2 py-1 font-medium">
              {step.duration}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Cleaning Categories -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-8">
      <h2 class="text-3xl font-light text-gray-900 mb-12 text-center">Deep Cleaning Categories</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {cleaningLevels.map((level) => (
          <a 
            href={`/guides/deep-cleaning/${level.slug}`}
            class="bg-white border border-gray-200 p-6 hover:border-gray-300 hover:shadow-lg transition-all duration-300 group text-center"
          >
            <div class="text-4xl mb-4 font-bold text-gray-800">{level.icon}</div>
            <h3 class="font-medium text-gray-900 mb-2 group-hover:text-gray-700">
              {level.name}
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed mb-4 font-light">
              {level.description}
            </p>
            <div class="space-y-2">
              <div class="text-xs px-2 py-1 font-medium bg-gray-100 text-gray-800">
                {level.difficulty}
              </div>
              <div class="text-xs text-gray-500">{level.timeRequired}</div>
              <div class="flex justify-between items-center">
                <span class="text-xs text-gray-500 font-light">
                  {level.count} guides
                </span>
                <span class="text-gray-400 group-hover:text-gray-600 transition-colors">→</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Guides -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-8">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-light text-gray-900">Professional Techniques</h2>
        <a href="/guides/deep-cleaning/all" class="text-gray-600 hover:text-gray-900 font-light">
          View All {categoryData.totalGuides} →
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {featuredGuides.map((guide) => (
          <article class="bg-white border border-gray-200 hover:border-gray-300 hover:shadow-lg transition-all duration-300 group">
            <div class="aspect-[16/9] bg-gradient-to-br from-gray-50 to-gray-100 border-b border-gray-200 flex items-center justify-center">
              <div class="text-center">
                <div class="w-16 h-16 bg-white border border-gray-200 mx-auto mb-3 flex items-center justify-center">
                  <span class="text-2xl font-bold text-gray-800">D</span>
                </div>
                <span class="text-xs text-gray-600 font-medium">{guide.difficulty}</span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h3 class="text-lg font-medium text-gray-900 mb-1 group-hover:text-gray-700">
                    {guide.title}
                  </h3>
                  <div class="flex items-center space-x-3 text-xs text-gray-500">
                    <span class="px-2 py-1 bg-gray-100 text-gray-800 font-medium">
                      {guide.difficulty}
                    </span>
                    <span>{guide.readTime}</span>
                  </div>
                </div>
              </div>
              
              <p class="text-gray-600 text-sm leading-relaxed mb-4 font-light">
                {guide.excerpt}
              </p>
              
              <div class="mb-4">
                <h4 class="text-xs font-medium text-gray-700 mb-2">You'll Master:</h4>
                <ul class="flex flex-wrap gap-2">
                  {guide.tasks.map((task) => (
                    <li class="text-xs bg-gray-100 text-gray-700 px-2 py-1">
                      {task}
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="flex justify-between items-center">
                <span class="text-xs px-2 py-1 font-medium bg-gray-50 text-gray-600">
                  {guide.difficulty}
                </span>
                <a 
                  href={`/guides/${guide.slug}`}
                  class="text-sm text-gray-900 hover:text-gray-600 font-medium"
                >
                  Read Guide →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Safety Warning -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-8">
      <h2 class="text-3xl font-light text-gray-900 mb-8 text-center">Deep Cleaning Safety</h2>
      
      <div class="bg-white border border-gray-200 p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="font-medium text-gray-900 mb-4">Before You Start</h3>
            <ul class="space-y-2 text-sm text-gray-800">
              <li>• Always test products in inconspicuous areas</li>
              <li>• Work in shade and moderate temperatures</li>
              <li>• Ensure adequate ventilation when using chemicals</li>
              <li>• Wear appropriate protective equipment</li>
              <li>• Have fresh water available for emergencies</li>
            </ul>
          </div>
          
          <div>
            <h3 class="font-medium text-gray-900 mb-4">When to Stop</h3>
            <ul class="space-y-2 text-sm text-gray-800">
              <li>• If gelcoat becomes hot during polishing</li>
              <li>• When compound starts to dry on surface</li>
              <li>• If you notice color changes or damage</li>
              <li>• When fatigue affects your technique</li>
              <li>• If weather conditions deteriorate</li>
            </ul>
          </div>
        </div>
        
        <div class="mt-6 p-4 bg-gray-50 border border-gray-200">
          <p class="text-sm text-gray-800">
            <strong>Critical:</strong> Deep cleaning techniques can permanently damage surfaces if done incorrectly. Consider professional services for valuable boats or if you're unsure about any step.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>