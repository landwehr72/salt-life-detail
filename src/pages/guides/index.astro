---
// src/pages/guides/index.astro
import BaseLayout from "@/layouts/BaseLayout.astro";

const guideCategories = [
  {
    name: "Basic Maintenance",
    slug: "basic-maintenance",
    description: "Essential care routines for saltwater boats",
    count: 12
  },
  {
    name: "Deep Cleaning",
    slug: "deep-cleaning", 
    description: "Comprehensive restoration techniques",
    count: 8
  },
  {
    name: "Seasonal Care",
    slug: "seasonal-care",
    description: "Hurricane prep and winter storage",
    count: 6
  },
  {
    name: "Problem Solving",
    slug: "problem-solving",
    description: "Fix stains, oxidation, and damage",
    count: 10
  }
];

const featuredGuides = [
  {
    title: "Complete Jetski Cleaning Guide",
    category: "Basic Maintenance",
    readTime: "15 min read",
    difficulty: "Beginner",
    excerpt: "Step-by-step process for maintaining your jetski in saltwater conditions, from weekly rinses to monthly deep cleans.",
    slug: "complete-jetski-cleaning-guide",
    featured: true
  },
  {
    title: "Removing Water Spots from Gelcoat", 
    category: "Problem Solving",
    readTime: "10 min read",
    difficulty: "Intermediate",
    excerpt: "Proven techniques for eliminating stubborn mineral deposits and water spots without damaging your boat's finish.",
    slug: "removing-water-spots-gelcoat",
    featured: true
  },
  {
    title: "Hurricane Season Boat Preparation",
    category: "Seasonal Care", 
    readTime: "20 min read",
    difficulty: "Intermediate",
    excerpt: "Comprehensive checklist for protecting your vessel during Florida's hurricane season.",
    slug: "hurricane-season-preparation",
    featured: true
  },
  {
    title: "Ceramic Coating Application Guide",
    category: "Deep Cleaning",
    readTime: "25 min read", 
    difficulty: "Advanced",
    excerpt: "Professional techniques for applying ceramic coatings to marine gelcoat surfaces.",
    slug: "ceramic-coating-application",
    featured: false
  }
];
---

<BaseLayout 
  title="Marine Detailing Guides | Salt Life Detail"
  description="Expert marine detailing guides and tutorials for boat owners. Learn professional techniques for cleaning, maintaining, and protecting your vessel in saltwater conditions."
>
  <!-- Header Section -->
  <section class="bg-white py-16 border-b border-gray-100">
    <div class="max-w-6xl mx-auto px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl font-light text-gray-900 mb-6 tracking-tight">
          Expert Guides
        </h1>
        <p class="text-xl text-gray-600 font-light leading-relaxed">
          Professional marine detailing techniques and maintenance guides. Learn the methods used by experts to keep boats pristine in Florida's challenging marine environment.
        </p>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-8">
      <h2 class="text-3xl font-light text-gray-900 mb-12 text-center">Browse by Topic</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {guideCategories.map((category) => (
          <a 
            href={`/guides/${category.slug}`}
            class="bg-white border border-gray-200 p-8 hover:border-gray-300 transition-all duration-300 group text-center"
          >
            <div class="w-1 h-12 bg-gray-900 mb-6 mx-auto"></div>
            <h3 class="text-lg font-medium text-gray-900 mb-3 group-hover:text-gray-700">
              {category.name}
            </h3>
            <p class="text-sm text-gray-600 leading-relaxed mb-4 font-light">
              {category.description}
            </p>
            <div class="flex justify-between items-center">
              <span class="text-xs text-gray-500 font-light">
                {category.count} guides
              </span>
              <span class="text-gray-400 group-hover:text-gray-600 transition-colors">→</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Guides -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-8">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-light text-gray-900">Latest Guides</h2>
        <a href="/guides/all" class="text-gray-600 hover:text-gray-900 font-light">
          View All →
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {featuredGuides.map((guide) => (
          <article class="bg-white border border-gray-200 hover:border-gray-300 transition-all duration-300 group">
            <div class="aspect-[16/9] bg-gradient-to-br from-gray-50 to-gray-100 border-b border-gray-200 flex items-center justify-center">
              <div class="w-16 h-16 bg-white border border-gray-300 flex items-center justify-center">
                <div class="w-8 h-8 bg-gray-900"></div>
              </div>
            </div>
            <div class="p-8">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <span class="text-xs text-gray-500 uppercase tracking-wide font-light mb-2 block">
                    {guide.category}
                  </span>
                  <h3 class="text-xl font-medium text-gray-900 mb-2 group-hover:text-gray-700">
                    {guide.title}
                  </h3>
                </div>
                <div class="text-right">
                  <div class="text-xs text-gray-500 font-light">{guide.readTime}</div>
                  <div class="text-xs text-gray-500 font-light">{guide.difficulty}</div>
                </div>
              </div>
              
              <p class="text-gray-600 text-sm leading-relaxed mb-6 font-light">
                {guide.excerpt}
              </p>
              
              <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                  <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 font-light">
                    {guide.difficulty}
                  </span>
                  <span class="text-xs text-gray-500 font-light">
                    {guide.readTime}
                  </span>
                </div>
                <a 
                  href={`/guides/${guide.slug}`}
                  class="text-sm text-gray-900 hover:text-gray-600 font-medium"
                >
                  Read Guide →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Tools & Materials Section -->
  <section class="py-16 bg-gray-50 border-t border-gray-100">
    <div class="max-w-6xl mx-auto px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-light text-gray-900 mb-4">Essential Tools</h2>
        <p class="text-gray-600 font-light max-w-2xl mx-auto">
          Professional-grade tools and materials recommended in our guides.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-white border border-gray-200 mx-auto mb-4 flex items-center justify-center">
            <div class="w-8 h-8 bg-gray-900"></div>
          </div>
          <h3 class="font-medium text-gray-900 mb-2">Quality Microfiber</h3>
          <p class="text-sm text-gray-600 font-light">
            Professional-grade cloths for streak-free results
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-white border border-gray-200 mx-auto mb-4 flex items-center justify-center">
            <div class="w-8 h-8 bg-gray-900"></div>
          </div>
          <h3 class="font-medium text-gray-900 mb-2">Foam Cannon</h3>
          <p class="text-sm text-gray-600 font-light">
            Essential for proper pre-wash and soap application
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-white border border-gray-200 mx-auto mb-4 flex items-center justify-center">
            <div class="w-8 h-8 bg-gray-900"></div>
          </div>
          <h3 class="font-medium text-gray-900 mb-2">pH-Neutral Soaps</h3>
          <p class="text-sm text-gray-600 font-light">
            Gentle cleaners that won't strip existing protection
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>